---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/ui/badge.astro';
import Card from '../components/ui/card.astro';
import Button from '../components/ui/button.astro';
import Container from '../components/container.astro';

const meta = {
  title: 'Customer Reviews of Blue Lawns Services',
  description: 'Discover why clients across Cape May County trust Blue Lawns for exceptional landscaping services. Read testimonials from Ocean View, Avalon, Stone Harbor, Wildwood, and Cape May customers.'
};
---

<Layout title={meta.title}>
  <Container>
  <section class="hero">
    <div class="hero__content space-y-4">
      <Badge>Customer Reviews of Blue Lawns Services</Badge>
      <h1 class="hero__title">Customer Reviews of Blue Lawns Services</h1>
      <p class="hero__lead"></p>
      <div class="hero__actions">
        <Button href="/contact">Book a visit</Button>
        <Button variant="outline" href="/about">Explore programs</Button>
      </div>
    </div>
  </section>

  <div class="grid gap-8 md:grid-cols-2">
    <Card title="See why customers love Blue Quality Lawn Care" description="" />
  </div>

      <section class="section">
        <div class="section__inner">
          <h2 class="section__heading">See why customers love Blue Quality Lawn Care</h2>
          <p class="section__body"></p>
        </div>
      </section>
  </Container>
</Layout>
