---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/container.astro';
import Badge from '../../components/ui/badge.astro';
import Card from '../../components/ui/card.astro';
import Button from '../../components/ui/button.astro';

const meta = {
  title: 'Lawn Care Tips & Expert Advice | Blue Lawns Knowledge Base',
  description: 'Expert lawn care tips and landscaping advice from Blue Lawns. Learn about coastal landscaping, erosion control, and property maintenance in Cape May County.'
};
---

<Layout title={meta.title} description={meta.description}>
  <section class="hero">
    <div class="hero__content space-y-4">
      <Badge>Lawn Care Tips & Expert Advice</Badge>
      <h1 class="hero__title">Knowledge Base</h1>
      <p class="hero__lead">Expert lawn care tips and landscaping advice from Blue Lawns. Learn about coastal landscaping, erosion control, and property maintenance in Cape May County.</p>
      <div class="hero__actions">
        <Button href="/contact">Request a Quote</Button>
        <Button variant="outline" href="/services">View Services</Button>
      </div>
    </div>
  </section>

  <div class="grid gap-8 md:grid-cols-2">

  </div>


  </Container>
</Layout>
