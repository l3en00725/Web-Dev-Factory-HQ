---
import Base from '../layouts/Base.astro';
import Container from '../components/layout/Container.astro';
import Button from '../components/ui/Button.astro';
import { generateBreadcrumbSchema } from '../lib/structured-data/Breadcrumbs';
import settings from '../content/settings.json';

const title = 'Membership Program';
const description = `Join the ${settings.title} membership program for hassle-free lawn care all year round. Save money and never worry about scheduling again.`;

// Structured data
const siteUrl = settings.siteUrl;
const breadcrumbSchema = generateBreadcrumbSchema(
  [
    { name: 'Home', url: '/' },
    { name: 'Membership', url: '/membership' },
  ],
  siteUrl
);

const structuredData = {
  '@graph': [breadcrumbSchema],
};

const membershipBenefits = [
  "Priority scheduling - always first in line",
  "Discounted rates on all services",
  "Free seasonal cleanup included",
  "No contracts - cancel anytime",
  "Dedicated account manager",
  "Emergency service availability"
];
---

<Base
  title={title}
  description={description}
  structuredData={structuredData}
  headerVariant="solid"
>
  <section class="py-section-mobile lg:py-section-desktop bg-background">
    <Container class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="font-display text-4xl lg:text-5xl font-bold mb-4">{title}</h1>
        <p class="text-xl text-foreground-secondary max-w-2xl mx-auto">
          {description}
        </p>
      </div>

      <div class="bg-surface rounded-2xl border border-border p-8 lg:p-12 shadow-lg">
        <h2 class="font-display text-2xl font-bold mb-6 text-center">Membership Benefits</h2>
        
        <ul class="grid md:grid-cols-2 gap-4 mb-8">
          {membershipBenefits.map((benefit) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-secondary-500 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
              <span class="text-foreground-secondary">{benefit}</span>
            </li>
          ))}
        </ul>

        <div class="text-center">
          <Button href="/contact" variant="primary" size="lg">
            Become a Member
          </Button>
          <p class="mt-4 text-sm text-foreground-muted">
            Contact us to learn about membership pricing and plans.
          </p>
        </div>
      </div>
    </Container>
  </section>
</Base>
