---
import AdminLayout from '../../admin-components/AdminLayout.astro';

const title = "Dashboard";
---

<AdminLayout title={title}>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">{title}</h1>
    <p class="text-gray-600">Welcome to the Blue Lawns admin dashboard</p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <p class="text-gray-700 mb-4">
      You are successfully authenticated! This page is protected by Supabase auth.
    </p>
    <p class="text-sm text-gray-500">
      User: {Astro.locals.user?.email || 'Unknown'}
    </p>
  </div>
</AdminLayout>



