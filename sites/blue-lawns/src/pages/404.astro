---
import Base from '../layouts/Base.astro';
import Container from '../components/layout/Container.astro';
import Button from '../components/ui/button.astro';

const title = "Page Not Found";
const description = "The page you're looking for doesn't exist or has been moved.";
---

<Base 
  title={title} 
  description={description}
  noIndex={true}
  headerVariant="solid"
>
  <section class="py-section-mobile lg:py-section-desktop bg-background">
    <Container class="text-center max-w-2xl mx-auto">
      <h1 class="font-display text-8xl font-bold mb-6 text-primary-500">404</h1>
      <h2 class="font-display text-2xl font-bold mb-4 text-foreground">{title}</h2>
      <p class="text-xl text-foreground-secondary mb-8">{description}</p>
      <div class="flex flex-wrap gap-4 justify-center">
        <Button href="/" variant="primary" size="lg">Go Home</Button>
        <Button href="/contact" variant="outline" size="lg">Contact Us</Button>
      </div>
    </Container>
  </section>
</Base>
