---
import Layout from '../layouts/Layout.astro';
import Container from '../components/container.astro';
import Sectionhead from '../components/sectionhead.astro';

const meta = {
  title: 'Professional Pool Service Cape May County | Ecoast Pool Care via Blue Lawns',
  description: 'Expert pool maintenance & cleaning in Cape May County, NJ. Weekly service, chemical balancing, equipment care. Trusted by vacation homeowners. Call for a quote!',
};

// Ecoast Pool Service branding
const ecoastBranding = {
  logo: 'https://cdn.prod.website-files.com/67c9a85171000a77547bc62d/67d000e1abb2df4398a159ba_Logo%20with%20Tagline%202.png',
  phone: '609-425-2954', // Blue Lawns tracking number for pool leads
  jobberUrl: 'https://clienthub.getjobber.com/client_hubs/c7073ac4-949a-4ae1-9cee-a723ddb9c5d1/public/work_request/new?source=bluelawns',
};

// Schema markup for Pool Service
const poolServiceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Pool Maintenance and Cleaning",
  "provider": {
    "@type": "Organization",
    "name": "Ecoast Pool Service",
    "image": ecoastBranding.logo,
    "telephone": ecoastBranding.phone,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "57 W. Katherine Ave Unit B",
      "addressLocality": "Ocean View",
      "addressRegion": "NJ",
      "postalCode": "08230",
      "addressCountry": "US"
    },
    "url": "https://ecoastpoolservice.com"
  },
  "areaServed": {
    "@type": "Place",
    "name": "Cape May County, NJ",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "39.0926",
      "longitude": "-74.8093"
    }
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Pool Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Weekly Pool Cleaning",
          "description": "Regular pool cleaning and skimming service"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Pool Opening & Closing",
          "description": "Seasonal pool opening and winterization services"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Chemical Balancing",
          "description": "Expert water chemistry management and testing"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Pool Equipment Care",
          "description": "Maintenance and repair of pool equipment"
        }
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "reviewCount": "71"
  }
};
---

<Layout title={meta.title} description={meta.description}>
  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(poolServiceSchema)}></script>

  <!-- Hero Section with Ecoast Branding -->
  <section class="hero-section py-20 bg-gradient-to-br from-blue-600 via-blue-700 to-cyan-600">
    <Container>
      <div class="text-center max-w-4xl mx-auto">
        <!-- Ecoast Pool Service Logo -->
        <div class="mb-8">
          <img 
            src={ecoastBranding.logo} 
            alt="Ecoast Pool Service - Professional Pool Care in Cape May County" 
            class="h-24 mx-auto"
            width="300"
            height="96"
          />
        </div>

        <h1 class="text-4xl lg:text-6xl font-bold text-white mb-6">
          Professional Pool Service in Cape May County, NJ
        </h1>
        
        <p class="text-xl lg:text-2xl text-blue-50 mb-4">
          Your Pool, Your Paradise
        </p>
        
        <p class="text-lg text-blue-100 mb-8 max-w-2xl mx-auto">
          Expert pool maintenance and cleaning services. We take pool care seriously, fine-tuning water chemistry with expert precision to keep your pool pristine, safe, and always ready to enjoy.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#request-service" 
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-blue-700 bg-white rounded-lg hover:bg-blue-50 transition-all shadow-lg hover:shadow-xl"
          >
            Request Pool Service
          </a>
          <a 
            href={`tel:${ecoastBranding.phone}`}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-blue-800 rounded-lg hover:bg-blue-900 transition-all shadow-lg"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call {ecoastBranding.phone}
          </a>
        </div>

        <p class="text-sm text-blue-100 mt-4">
          Powered by <a href="https://www.bluelawns.com" class="underline hover:text-white">Blue Lawns</a> &amp; <a href="https://ecoastpoolservice.com" class="underline hover:text-white" target="_blank" rel="noopener">Ecoast Pool Service</a>
        </p>
      </div>
    </Container>
  </section>

  <!-- Services Section -->
  <section class="py-20">
    <Container>
      <Sectionhead>
        <Fragment slot="title">Our Comprehensive Pool Care Services</Fragment>
        <Fragment slot="desc">
          Expert maintenance packages tailored to your pool's needs
        </Fragment>
      </Sectionhead>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
        <!-- Service 1 -->
        <div class="p-6 bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow border border-gray-200">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Weekly Pool Cleaning</h3>
          <p class="text-gray-600">Regular cleaning, skimming, and vacuuming to keep your pool crystal clear.</p>
        </div>

        <!-- Service 2 -->
        <div class="p-6 bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow border border-gray-200">
          <div class="w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Chemical Balancing</h3>
          <p class="text-gray-600">Expert water chemistry management for safe, healthy swimming conditions.</p>
        </div>

        <!-- Service 3 -->
        <div class="p-6 bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow border border-gray-200">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Year-Round Care</h3>
          <p class="text-gray-600">Pool opening, closing, and seasonal maintenance services.</p>
        </div>

        <!-- Service 4 -->
        <div class="p-6 bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow border border-gray-200">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Equipment Care</h3>
          <p class="text-gray-600">Maintenance, repair, and installation of pool equipment and systems.</p>
        </div>
      </div>
    </Container>
  </section>

  <!-- Service Areas Section -->
  <section class="py-16 bg-gray-50">
    <Container>
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">Serving Cape May County</h2>
        <p class="text-lg text-gray-600">
          Professional pool service throughout Cape May County and surrounding areas
        </p>
      </div>

      <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 text-center">
        {['Cape May Court House', 'Cape May', 'Avalon', 'Stone Harbor', 'Ocean City', 'Sea Isle City', 'Wildwood', 'Rio Grande'].map((city) => (
          <div class="bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
            <svg class="w-6 h-6 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="font-medium text-gray-800">{city}</p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Request Service Form Section -->
  <section id="request-service" class="py-20">
    <Container>
      <div class="max-w-2xl mx-auto">
        <Sectionhead>
          <Fragment slot="title">Request Pool Service</Fragment>
          <Fragment slot="desc">
            Fill out the form below and we'll get back to you within 24 hours
          </Fragment>
        </Sectionhead>

        <form 
          action="/api/submit-pool-lead" 
          method="POST" 
          class="mt-12 space-y-6 bg-white p-8 rounded-lg shadow-lg"
        >
          <!-- Hidden Fields for Lead Tracking -->
          <input type="hidden" name="lead_source" value="Blue Lawns" />
          <input type="hidden" name="lead_type" value="Pool Lead" />
          <input type="hidden" name="service_interest" value="Pool Maintenance" />
          <input type="hidden" name="referral_url" value="https://www.bluelawns.com/pools" />

          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="John Smith"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="john@example.com"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="(609) 555-1234"
            />
          </div>

          <!-- City -->
          <div>
            <label for="city" class="block text-sm font-medium text-gray-700 mb-2">City *</label>
            <select 
              id="city" 
              name="city" 
              required 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Select your city</option>
              <option value="Cape May Court House">Cape May Court House</option>
              <option value="Cape May">Cape May</option>
              <option value="Avalon">Avalon</option>
              <option value="Stone Harbor">Stone Harbor</option>
              <option value="Ocean City">Ocean City</option>
              <option value="Sea Isle City">Sea Isle City</option>
              <option value="Wildwood">Wildwood</option>
              <option value="Rio Grande">Rio Grande</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <!-- Service Type -->
          <div>
            <label for="service_type" class="block text-sm font-medium text-gray-700 mb-2">Service Needed</label>
            <select 
              id="service_type" 
              name="service_type" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="Weekly Pool Cleaning">Weekly Pool Cleaning</option>
              <option value="Chemical Balancing">Chemical Balancing</option>
              <option value="Pool Opening/Closing">Pool Opening/Closing</option>
              <option value="Equipment Care">Equipment Care & Repair</option>
              <option value="Vacation Home Service">Vacation Home Monitoring</option>
              <option value="One-Time Service">One-Time Service</option>
              <option value="Not Sure">Not Sure - Need Consultation</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Additional Details</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Tell us about your pool service needs..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div>
            <button 
              type="submit" 
              class="w-full px-8 py-4 text-lg font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl"
            >
              Request Your Free Quote
            </button>
          </div>

          <p class="text-sm text-gray-500 text-center">
            By submitting this form, you agree to be contacted by Ecoast Pool Service regarding your pool care needs.
          </p>
        </form>

        <!-- Alternative Contact Methods -->
        <div class="mt-8 text-center">
          <p class="text-gray-600 mb-4">Prefer to talk to us directly?</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href={`tel:${ecoastBranding.phone}`}
              class="inline-flex items-center justify-center px-6 py-3 font-semibold text-blue-700 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call {ecoastBranding.phone}
            </a>
            <a 
              href={ecoastBranding.jobberUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-6 py-3 font-semibold text-white bg-cyan-600 rounded-lg hover:bg-cyan-700 transition-colors"
            >
              Visit Ecoast Pool Service
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-gradient-to-br from-blue-50 to-cyan-50">
    <Container>
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl lg:text-4xl font-bold text-center mb-12">Why Choose Ecoast Pool Service</h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Feature 1 -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold mb-2">Punctual & Reliable</h3>
              <p class="text-gray-600">We show up on time, every time. Your pool maintenance is scheduled and executed with precision.</p>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-cyan-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold mb-2">Expert Water Chemistry</h3>
              <p class="text-gray-600">Professional testing and balancing to ensure your pool water is always safe and healthy.</p>
            </div>
          </div>

          <!-- Feature 3 -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold mb-2">Vacation Home Friendly</h3>
              <p class="text-gray-600">Perfect for vacation homeowners - we monitor and maintain your pool year-round.</p>
            </div>
          </div>

          <!-- Feature 4 -->
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold mb-2">Trusted by Locals</h3>
              <p class="text-gray-600">5-star rated service with 71+ satisfied customers across Cape May County.</p>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600">
    <Container>
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-4">
          Ready to Enjoy a Pristine Pool?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Let Ecoast Pool Service handle your pool maintenance so you can focus on making memories.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#request-service" 
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-blue-700 bg-white rounded-lg hover:bg-blue-50 transition-all shadow-lg"
          >
            Get Your Free Quote
          </a>
          <a 
            href={`tel:${ecoastBranding.phone}`}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-blue-800 rounded-lg hover:bg-blue-900 transition-all border-2 border-white"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Now
          </a>
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  /* Ecoast branding styles */
  .hero-section {
    background-image: linear-gradient(135deg, #1e40af 0%, #0891b2 100%);
  }
  
  /* Form styling */
  input:focus, select:focus, textarea:focus {
    outline: none;
  }
</style>

