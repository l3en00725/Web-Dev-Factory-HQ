---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/ui/badge.astro';
import Card from '../components/ui/card.astro';
import Button from '../components/ui/button.astro';
import Container from '../components/container.astro';

const meta = {
  title: 'Contact Blue Lawns | Lawn Care Services Cape May County NJ',
  description: 'Contact Blue Lawns for lawn care and landscaping in Cape May County. Call 609-425-2954 or visit 57 W Katherine Ave Unit B, Ocean View, NJ 08230. Serving Avalon, Wildwood, Stone Harbor, Cape May.'
};
---

<Layout title={meta.title}>
  <Container>
  <section class="hero">
    <div class="hero__content space-y-4">
      <Badge>Contact Blue Lawns</Badge>
      <h1 class="hero__title">Contact Our Landscaping Experts</h1>
      <p class="hero__lead">Get in touch with Blue Lawns for professional lawn care and landscaping services in Cape May County. We're here to help transform your outdoor space.</p>
      <div class="hero__actions">
        <Button href="/contact">Request a Quote</Button>
        <Button variant="outline" href="/services">View Services</Button>
      </div>
    </div>
  </section>

  <div class="grid gap-8 md:grid-cols-2">

  </div>


  </Container>
</Layout>
