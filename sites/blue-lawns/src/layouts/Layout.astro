---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import siteSchema from "@/components/site-schema.json";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  structuredData?: Record<string, unknown>;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title, description, structuredData } = Astro.props;

const makeTitle = title
  ? title + " | " + "Blue Lawns"
  : "Blue Lawns - Professional Lawn Care, Landscaping & Pool Maintenance";

const metaDescription = description || "Blue Lawns provides expert lawn care, landscaping, and pool maintenance services. Professional, reliable, and affordable outdoor property care.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{makeTitle}</title>
    <meta name="description" content={metaDescription} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />

    <SEO
      title={makeTitle}
      description={metaDescription}
      canonical={canonicalURL}
      twitter={{
        creator: "@bluelawns",
        site: "@bluelawns",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Blue Lawns - Professional Lawn Care & Landscaping`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Blue Lawns Professional Lawn Care & Landscaping Services",
        },
      }}
    />
    
    {(structuredData || siteSchema) && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData || siteSchema)} />
    )}
  </head>
  <body>
    <div class="max-w-(--breakpoint-xl) mx-auto px-5">
      <Navbar />
    </div>
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
