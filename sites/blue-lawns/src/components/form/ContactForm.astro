---
// Static contact form component (no Sanity dependency)
import settings from '../../content/settings.json';

const destination = settings.formDestination;
---

<contact-form class="block">
  <form id="contactForm" data-form="lead" class="space-y-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <label for="name" class="text-sm font-medium text-foreground">Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
        />
      </div>
      <div class="space-y-2">
        <label for="email" class="text-sm font-medium text-foreground">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
          placeholder="your.email@example.com"
          class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
        />
        <p class="text-xs text-foreground-muted hidden" id="email-error">Please enter a valid email address</p>
      </div>
    </div>

    <div class="space-y-2">
      <label for="phone" class="text-sm font-medium text-foreground">Phone</label>
      <input 
        type="tel" 
        id="phone" 
        name="phone" 
        required
        pattern="[\d\s\-\(\)\+]{10,}"
        placeholder="(609) 425-2954"
        class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
      />
      <p class="text-xs text-foreground-muted hidden" id="phone-error">Please enter a valid phone number (at least 10 digits)</p>
    </div>

    <div class="space-y-2">
      <label for="address" class="text-sm font-medium text-foreground">Property Address</label>
      <input 
        type="text" 
        id="address" 
        name="address" 
        required 
        placeholder="Start typing your address..."
        autocomplete="off"
        class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
      />
      <input type="hidden" id="address-place-id" name="placeId" />
    </div>

    <div class="space-y-2">
      <label for="message" class="text-sm font-medium text-foreground">Message</label>
      <textarea 
        id="message" 
        name="message" 
        required 
        rows="4"
        class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
      ></textarea>
    </div>

    <button 
      type="submit" 
      class="w-full rounded-md bg-secondary-500 px-6 py-3 text-base font-semibold text-white hover:bg-secondary-600 focus:outline-none focus:ring-2 focus:ring-secondary-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 shadow-lg shadow-secondary-900/20 hover:shadow-xl hover:-translate-y-0.5"
      style="min-height: 48px;"
    >
      Submit
    </button>

    <div id="formStatus" class="hidden rounded-md p-3 text-sm"></div>
  </form>
</contact-form>

<script>
  class ContactForm extends HTMLElement {
    constructor() {
      super();
      const form = this.querySelector('form');
      const statusDiv = this.querySelector('#formStatus');
      const submitBtn = this.querySelector('button[type="submit"]');

      // Initialize Google Places Autocomplete
      this.initializeAutocomplete();

      if (form) {
        // Validation functions
        const validateEmail = (email) => {
          const emailRegex = /^[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$/i;
          return emailRegex.test(email);
        };

        const validatePhone = (phone) => {
          // Remove all non-digit characters
          const digitsOnly = phone.replace(/\D/g, '');
          // Must have at least 10 digits (US phone number)
          return digitsOnly.length >= 10;
        };

        // Add real-time validation
        const emailInput = form.querySelector('#email');
        const phoneInput = form.querySelector('#phone');
        const emailError = form.querySelector('#email-error');
        const phoneError = form.querySelector('#phone-error');

        if (emailInput) {
          emailInput.addEventListener('blur', () => {
            if (emailInput.value && !validateEmail(emailInput.value)) {
              emailInput.setCustomValidity('Please enter a valid email address');
              if (emailError) {
                emailError.classList.remove('hidden');
                emailError.classList.add('text-error');
              }
            } else {
              emailInput.setCustomValidity('');
              if (emailError) {
                emailError.classList.add('hidden');
              }
            }
          });
          emailInput.addEventListener('input', () => {
            if (emailError) {
              emailError.classList.add('hidden');
            }
            emailInput.setCustomValidity('');
          });
        }

        if (phoneInput) {
          phoneInput.addEventListener('blur', () => {
            if (phoneInput.value && !validatePhone(phoneInput.value)) {
              phoneInput.setCustomValidity('Please enter a valid phone number (at least 10 digits)');
              if (phoneError) {
                phoneError.classList.remove('hidden');
                phoneError.classList.add('text-error');
              }
            } else {
              phoneInput.setCustomValidity('');
              if (phoneError) {
                phoneError.classList.add('hidden');
              }
            }
          });
          phoneInput.addEventListener('input', () => {
            if (phoneError) {
              phoneError.classList.add('hidden');
            }
            phoneInput.setCustomValidity('');
          });
        }

        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          if (!submitBtn || !statusDiv) return;

          // Validate email
          const email = form.querySelector('#email')?.value || '';
          if (!validateEmail(email)) {
            statusDiv.textContent = 'Please enter a valid email address.';
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('bg-error/10', 'text-error');
            form.querySelector('#email')?.focus();
            return;
          }

          // Validate phone
          const phone = form.querySelector('#phone')?.value || '';
          if (!validatePhone(phone)) {
            statusDiv.textContent = 'Please enter a valid phone number (at least 10 digits).';
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('bg-error/10', 'text-error');
            form.querySelector('#phone')?.focus();
            return;
          }

          // Track form submission event (before async operation)
          if (typeof window.trackEvent === 'function') {
            window.trackEvent('lead_submission', {
              form_id: form.id || 'contactForm',
              form_name: 'contact'
            });
          }

          // Reset status
          statusDiv.classList.add('hidden');
          statusDiv.className = 'hidden rounded-md p-3 text-sm';
          submitBtn.setAttribute('disabled', 'true');
          submitBtn.textContent = 'Sending...';

          const formData = new FormData(form);
          const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            phone: formData.get('phone'),
            address: formData.get('address'),
            message: formData.get('message'),
            formName: 'contact',
            pagePath: window.location.pathname,
            leadSource: 'website'
          };

          try {
            const response = await fetch('/api/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            if (result.success) {
              // Redirect to thank you page
              window.location.href = '/thank-you';
            } else {
              throw new Error(result.error || 'Submission failed');
            }
          } catch (error) {
            console.error('Form error:', error);
            statusDiv.textContent = 'Something went wrong. Please try again or call us directly.';
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('bg-error/10', 'text-error');
          } finally {
            submitBtn.removeAttribute('disabled');
            submitBtn.textContent = 'Submit';
          }
        });
      }
    }

    initializeAutocomplete() {
      const input = this.querySelector('#address');
      const placeIdInput = this.querySelector('#address-place-id');
      if (!input) {
        console.error('‚ùå Address input not found');
        return;
      }

      // Add error handler for Google Maps API errors
      window.gm_authFailure = function() {
        console.error('‚ùå Google Maps API authentication failed. Check your API key and restrictions.');
      };

      const initAutocomplete = () => {
        // Check if Google Maps API and Places library are loaded
        if (typeof google === 'undefined' || !google.maps || !google.maps.places) {
          return false;
        }

        try {
          // Use the traditional Autocomplete (still works, just deprecated for new customers)
          const autocomplete = new google.maps.places.Autocomplete(input, {
            fields: ['formatted_address', 'address_components', 'geometry', 'place_id'],
            componentRestrictions: { country: 'us' },
            types: ['address']
          });

          // Listen for place selection
          autocomplete.addListener('place_changed', () => {
            const place = autocomplete.getPlace();
            if (place.formatted_address) {
              input.value = place.formatted_address;
              if (place.place_id && placeIdInput) {
                placeIdInput.value = place.place_id;
              }
              console.log('üìç Place selected:', place.formatted_address);
            }
          });
          
          console.log('‚úÖ Google Places Autocomplete initialized successfully');
          return true;
        } catch (error) {
          console.error('‚ùå Error initializing Google Places Autocomplete:', error);
          return false;
        }
      };

      // Try immediately
      if (initAutocomplete()) return;

      // Wait for Google Maps API to load
      const checkGoogleMaps = setInterval(() => {
        if (initAutocomplete()) {
          clearInterval(checkGoogleMaps);
        }
      }, 100);

      // Timeout after 10 seconds
      setTimeout(() => {
        clearInterval(checkGoogleMaps);
        if (!input.dataset.autocompleteInitialized) {
          console.warn('‚ö†Ô∏è Google Places API did not load after 10 seconds.');
        }
      }, 10000);
    }
  }

  customElements.define('contact-form', ContactForm);
</script>
