---
// Static contact form component (no Sanity dependency)
import settings from '../../content/settings.json';

const destination = settings.formDestination;
---

<contact-form class="block">
  <form id="contactForm" data-form="lead" class="space-y-4">
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div class="space-y-2">
        <label for="name" class="text-sm font-medium text-foreground">Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
        />
      </div>
      <div class="space-y-2">
        <label for="email" class="text-sm font-medium text-foreground">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
        />
      </div>
    </div>

    <div class="space-y-2">
      <label for="phone" class="text-sm font-medium text-foreground">Phone (Optional)</label>
      <input 
        type="tel" 
        id="phone" 
        name="phone" 
        class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
      />
    </div>

    <div class="space-y-2">
      <label for="message" class="text-sm font-medium text-foreground">Message</label>
      <textarea 
        id="message" 
        name="message" 
        required 
        rows="4"
        class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-foreground-muted focus:outline-none focus:ring-2 focus:ring-primary-500"
      ></textarea>
    </div>

    <button 
      type="submit" 
      class="w-full rounded-md bg-accent-500 px-4 py-2 text-sm font-medium text-white hover:bg-accent-600 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
    >
      Send Message
    </button>

    <div id="formStatus" class="hidden rounded-md p-3 text-sm"></div>
  </form>
</contact-form>

<script>
  class ContactForm extends HTMLElement {
    constructor() {
      super();
      const form = this.querySelector('form');
      const statusDiv = this.querySelector('#formStatus');
      const submitBtn = this.querySelector('button[type="submit"]');

      if (form) {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          if (!submitBtn || !statusDiv) return;

          // Track form submission event (before async operation)
          if (typeof window.trackEvent === 'function') {
            window.trackEvent('lead_submission', {
              form_id: form.id || 'contactForm',
              form_name: 'contact'
            });
          }

          // Reset status
          statusDiv.classList.add('hidden');
          statusDiv.className = 'hidden rounded-md p-3 text-sm';
          submitBtn.setAttribute('disabled', 'true');
          submitBtn.textContent = 'Sending...';

          const formData = new FormData(form);
          const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            phone: formData.get('phone'),
            message: formData.get('message'),
            formName: 'contact',
            pagePath: window.location.pathname,
            leadSource: 'website'
          };

          try {
            const response = await fetch('/api/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            if (result.success) {
              statusDiv.textContent = 'Message sent successfully! We will get back to you soon.';
              statusDiv.classList.remove('hidden');
              statusDiv.classList.add('bg-secondary-100', 'text-secondary-800');
              form.reset();
            } else {
              throw new Error(result.error || 'Submission failed');
            }
          } catch (error) {
            console.error('Form error:', error);
            statusDiv.textContent = 'Something went wrong. Please try again or call us directly.';
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('bg-error/10', 'text-error');
          } finally {
            submitBtn.removeAttribute('disabled');
            submitBtn.textContent = 'Send Message';
          }
        });
      }
    }
  }

  customElements.define('contact-form', ContactForm);
</script>
