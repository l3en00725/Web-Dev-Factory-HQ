---
import Container from './Container.astro';
import Logo from '../ui/Logo.astro';
import settings from '../../content/settings.json';

interface Props {
  logoSrc?: string;
  siteTitle?: string;
}

const { logoSrc, siteTitle = 'Blue Lawns' } = Astro.props;
const currentYear = new Date().getFullYear();

// Static footer links
const footerLinks = {
  services: [
    { label: 'Lawn Care', href: '/services/lawn-care' },
    { label: 'Landscaping', href: '/services/landscaping' },
    { label: 'Fencing', href: '/services/fencing' },
    { label: 'Seasonal Cleanup', href: '/services/seasonal-cleanup' },
    { label: 'Commercial', href: '/services/commercial-services' },
  ],
  company: [
    { label: 'About Us', href: '/contact' },
    { label: 'Locations', href: '/locations' },
    { label: 'Contact', href: '/contact' },
    { label: 'Membership', href: '/membership' },
  ],
  legal: [
    { label: 'Privacy Policy', href: '/privacy' },
    { label: 'Terms of Service', href: '/terms' },
    { label: 'Sitemap', href: '/sitemap.xml' },
  ]
};

// Map social links from settings object
const socialLinks = Object.entries(settings.social || {}).map(([platform, url]) => ({
  platform,
  url
}));
---

<footer class="relative bg-primary-950 pt-24 pb-12 text-primary-100/80 overflow-hidden">
  {/* Ambient Background Effects */}
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute -top-[500px] -left-[500px] w-[1000px] h-[1000px] bg-primary-900/30 rounded-full blur-3xl opacity-20 mix-blend-screen"></div>
    <div class="absolute bottom-0 right-0 w-[800px] h-[800px] bg-secondary-900/20 rounded-full blur-3xl opacity-20 mix-blend-screen"></div>
  </div>

  <Container class="relative z-10">
    <div class="grid gap-x-12 gap-y-16 lg:grid-cols-12">
      {/* Brand Column */}
      <div class="lg:col-span-4 space-y-8">
        <div class="text-white">
          <Logo src={logoSrc} text={siteTitle} />
        </div>
        <p class="max-w-xs text-lg text-primary-200/70 leading-relaxed font-light">
          Professional lawn care and landscaping services for Cape May County. We create outdoor spaces that bring families together.
        </p>
        
        <div class="flex flex-col gap-4 pt-4">
          <div class="flex items-center gap-3 text-sm font-medium text-white/90">
            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-secondary-500/20 text-secondary-400 ring-1 ring-secondary-500/30">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
            </div>
            Fully Licensed & Insured
          </div>
          <div class="flex items-center gap-3 text-sm font-medium text-white/90">
             <div class="flex h-8 w-8 items-center justify-center rounded-full bg-secondary-500/20 text-secondary-400 ring-1 ring-secondary-500/30">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
              </svg>
            </div>
            100% Satisfaction Guaranteed
          </div>
        </div>
      </div>

      {/* Navigation Columns */}
      <div class="lg:col-span-8 grid grid-cols-2 md:grid-cols-3 gap-8">
        {/* Services */}
        <div class="space-y-6">
          <h3 class="text-sm font-bold uppercase tracking-wider text-white">Services</h3>
          <ul class="space-y-4">
            {footerLinks.services.map(link => (
              <li>
                <a href={link.href} class="group flex items-center gap-2 text-primary-200/70 hover:text-white transition-colors duration-300">
                  <span class="h-px w-0 bg-secondary-500 transition-all duration-300 group-hover:w-4"></span>
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        {/* Company */}
        <div class="space-y-6">
          <h3 class="text-sm font-bold uppercase tracking-wider text-white">Company</h3>
          <ul class="space-y-4">
            {footerLinks.company.map(link => (
              <li>
                <a href={link.href} class="group flex items-center gap-2 text-primary-200/70 hover:text-white transition-colors duration-300">
                  <span class="h-px w-0 bg-secondary-500 transition-all duration-300 group-hover:w-4"></span>
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        {/* Contact */}
        <div class="space-y-6">
          <h3 class="text-sm font-bold uppercase tracking-wider text-white">Contact</h3>
          <ul class="space-y-4">
            <li class="text-primary-200/70">
              <span class="block text-xs text-primary-400 mb-1">Serving</span>
              Cape May County, NJ
            </li>
            {settings.contact?.email && (
              <li>
                <a href={`mailto:${settings.contact.email}`} class="block text-white hover:text-secondary-400 transition-colors">
                  {settings.contact.email}
                </a>
              </li>
            )}
            {settings.contact?.phone && (
              <li>
                <a href={`tel:${settings.contact.phone}`} class="block text-lg font-display font-bold text-white hover:text-secondary-400 transition-colors">
                  {settings.contact.phone}
                </a>
              </li>
            )}
          </ul>
          
          {/* Socials */}
          <div class="flex gap-4 pt-2">
            {socialLinks.map(social => (
               <a 
                href={social.url} 
                target="_blank"
                rel="noopener noreferrer"
                aria-label={social.platform} 
                class="h-10 w-10 flex items-center justify-center rounded-full bg-white/5 text-white hover:bg-white/10 hover:scale-110 transition-all duration-300 border border-white/10"
              >
                <span class="capitalize text-xs">{social.platform[0]}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>

    {/* Bottom Bar */}
    <div class="mt-20 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-primary-400/60">
      <p>Â© {currentYear} {siteTitle}. All rights reserved.</p>
      <div class="flex gap-8">
        {footerLinks.legal.map(link => (
          <a href={link.href} class="hover:text-white transition-colors">{link.label}</a>
        ))}
      </div>
    </div>
  </Container>
</footer>
