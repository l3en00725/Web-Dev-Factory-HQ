---
import Container from './Container.astro';
import Logo from '../ui/Logo.astro';
import settings from '../../content/settings.json';

interface Props {
  logoSrc?: string;
  siteTitle?: string;
}

const year = new Date().getFullYear();
---

<footer class="relative bg-primary-950 pt-24 pb-12 text-primary-100/80 overflow-hidden">
  {/* Ambient Background Effects */}
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute -top-[500px] -left-[500px] w-[1000px] h-[1000px] bg-primary-900/30 rounded-full blur-3xl opacity-20 mix-blend-screen"></div>
    <div class="absolute bottom-0 right-0 w-[800px] h-[800px] bg-secondary-900/20 rounded-full blur-3xl opacity-20 mix-blend-screen"></div>
  </div>

  <Container class="relative z-10">
    <div class="grid gap-x-12 gap-y-16 lg:grid-cols-4">
      {/* Brand Column */}
      <div class="space-y-8">
        <div class="mb-6">
          <Logo class="w-[150px]" loading="lazy" />
        </div>
        <p class="max-w-xs text-lg text-primary-200/70 leading-relaxed font-light">
          Professional lawn care and landscaping services for Cape May County. We create outdoor spaces that bring families together.
        </p>

        {/* Social Icons */}
        <div class="flex items-center gap-4 pt-4">
          <a 
            href={settings.social?.facebook || 'https://facebook.com/bluelawnsnj'} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-white/5 text-white transition-all hover:bg-white/10 hover:text-primary-400"
            aria-label="Follow us on Facebook"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
          <a 
            href={settings.social?.instagram || 'https://instagram.com/bluelawnsnj'} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-white/5 text-white transition-all hover:bg-white/10 hover:text-primary-400"
            aria-label="Follow us on Instagram"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
        </div>
        
        <div class="flex flex-col gap-4 pt-6">
          <a href={`mailto:${settings.contact.email}`} class="flex items-center gap-3 text-white transition-colors hover:text-secondary-400 group">
            <span class="flex h-10 w-10 items-center justify-center rounded-full bg-white/5 transition-colors group-hover:bg-white/10">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            </span>
            {settings.contact.email}
          </a>
          <a href={`tel:${settings.contact.phone.replace(/\s/g, '')}`} class="flex items-center gap-3 text-white transition-colors hover:text-secondary-400 group">
             <span class="flex h-10 w-10 items-center justify-center rounded-full bg-white/5 transition-colors group-hover:bg-white/10">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            </span>
            {settings.contact.phone}
          </a>
        </div>
      </div>

      {/* Services Links */}
      <div>
        <h3 class="mb-6 font-display text-lg font-bold tracking-wide text-white">Services</h3>
        <ul class="space-y-4">
          <li><a href="/services/lawn-care" class="hover:text-white transition-colors">Lawn Care</a></li>
          <li><a href="/services/landscaping" class="hover:text-white transition-colors">Landscaping</a></li>
          <li><a href="/services/seasonal-cleanup" class="hover:text-white transition-colors">Seasonal Cleanup</a></li>
          <li><a href="/services/fencing" class="hover:text-white transition-colors">Fencing</a></li>
        </ul>
      </div>

      {/* Company Links */}
      <div>
        <h3 class="mb-6 font-display text-lg font-bold tracking-wide text-white">Company</h3>
        <ul class="space-y-4">
          <li><a href="/about" class="hover:text-white transition-colors">About Us</a></li>
          <li><a href="/locations" class="hover:text-white transition-colors">Service Areas</a></li>
          <li><a href="/contact" class="hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>

       {/* Legal Links */}
       <div>
        <h3 class="mb-6 font-display text-lg font-bold tracking-wide text-white">Legal</h3>
        <ul class="space-y-4">
          <li><a href="/privacy-policy" class="hover:text-white transition-colors">Privacy Policy</a></li>
          <li><a href="/terms-of-service" class="hover:text-white transition-colors">Terms of Service</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-20 border-t border-white/10 pt-8 text-center text-sm text-primary-200/50">
      <p>&copy; {year} {settings.title}. All rights reserved. <span class="mx-2">|</span> Website by Web Dev Factory</p>
    </div>
  </Container>
</footer>
