---
interface Props {
  href?: string;
  variant?: 'default' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { 
  href, 
  variant = 'default', 
  size = 'md',
  class: className,
  type = 'button'
} = Astro.props;

const variantClasses = {
  default: 'bg-[#0074D9] text-white hover:bg-[#005BBB] border-2 border-transparent',
  outline: 'bg-white text-[#0074D9] border-2 border-[#0074D9] hover:bg-[#E0F0FF]',
  ghost: 'bg-transparent text-[#0074D9] hover:bg-[#E0F0FF] border-2 border-transparent'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-5 py-2.5 text-base',
  lg: 'px-6 py-3 text-lg'
};

const baseClasses = 'rounded-md text-center transition focus-visible:ring-2 ring-offset-2 ring-[#1E90FF]';

const Component = href ? 'a' : 'button';
---

<Component
  href={href}
  type={!href ? type : undefined}
  class:list={[
    baseClasses,
    variantClasses[variant],
    sizeClasses[size],
    className
  ]}
>
  <slot />
</Component>
