---
interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<div class:list={[
  'p-6 bg-white border border-gray-200 rounded-lg shadow-sm',
  className
]}>
  {title && (
    <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
  )}
  {description && (
    <p class="text-gray-700">{description}</p>
  )}
  <slot />
</div>

