---
import Container from '../layout/Container.astro';

const steps = [
  {
    number: '1',
    title: 'Request a Quote',
    description: 'Tell us what you need and get a free estimate within 24 hours.'
  },
  {
    number: '2',
    title: 'Get Your Plan',
    description: 'We create a custom plan tailored to your property and schedule.'
  },
  {
    number: '3',
    title: 'Enjoy the Season',
    description: 'Sit back and relax while we handle all the hard work for you.'
  }
];
---

<section class="py-20 bg-slate-50">
  <Container>
    <div class="text-center mb-16">
      <h2 class="font-display text-3xl lg:text-4xl font-bold text-brand-navy mb-4">
        How It Works
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Getting started with Blue Lawns is simple. We make the process easy so you can focus on what matters.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12 relative">
      {/* Connector Line (Desktop Only) */}
      <div class="hidden md:block absolute top-12 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-primary-200 to-transparent" style="top: 3rem; margin: 0 10%;"></div>

      {steps.map((step, index) => (
        <div class="relative text-center">
          <div class="flex items-center justify-center mb-6">
            <div class="w-24 h-24 rounded-full bg-white shadow-lg border-4 border-primary-100 flex items-center justify-center relative z-10">
              <span class="font-display text-3xl font-bold text-primary-600">
                {step.number}
              </span>
            </div>
          </div>
          <h3 class="font-display text-xl font-bold text-brand-navy mb-3">
            {step.title}
          </h3>
          <p class="text-slate-600 text-base leading-relaxed">
            {step.description}
          </p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="/contact" 
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-secondary-500 hover:bg-secondary-600 rounded-full shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
      >
        Get Started Today
      </a>
    </div>
  </Container>
</section>

