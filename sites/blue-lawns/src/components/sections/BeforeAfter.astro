---
import Container from '../layout/Container.astro';
import Image from '../base/Image.astro';

interface Props {
  title?: string;
  subtitle?: string;
  beforeImage?: string;
  afterImage?: string;
}

const {
  title = "See the Difference",
  subtitle = "Real results from real properties in your neighborhood.",
  beforeImage = "/src/assets/images/before-placeholder.svg",
  afterImage = "/src/assets/images/after-placeholder.svg"
} = Astro.props;
---

<section class="py-24 bg-white">
  <Container>
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="font-display text-4xl font-bold tracking-tight text-slate-900 lg:text-5xl mb-6">
        {title}
      </h2>
      <p class="text-xl text-slate-500 leading-relaxed font-light">
        {subtitle}
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-2 items-center">
      {/* Before */}
      <div class="relative group overflow-hidden rounded-2xl shadow-lg">
        <div class="absolute top-4 left-4 bg-white/90 backdrop-blur text-slate-900 font-bold px-4 py-1 rounded-full text-sm z-10 shadow-sm">
          Before
        </div>
        <div class="aspect-[4/3] w-full bg-slate-100">
           <Image 
            src={beforeImage} 
            alt="Property before landscaping" 
            class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
        </div>
      </div>

      {/* After */}
      <div class="relative group overflow-hidden rounded-2xl shadow-lg ring-4 ring-primary-50">
        <div class="absolute top-4 left-4 bg-secondary-500 text-white font-bold px-4 py-1 rounded-full text-sm z-10 shadow-sm">
          After
        </div>
        <div class="aspect-[4/3] w-full bg-slate-100">
           <Image 
            src={afterImage} 
            alt="Property after landscaping" 
            class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
        </div>
      </div>
    </div>
  </Container>
</section>

