---
import Container from '../layout/Container.astro';
import Button from '../ui/button.astro';
import settings from '../../content/settings.json';

interface Props {
  title?: string;
  text?: string;
  primaryCtaLabel?: string;
  primaryCtaLink?: string;
  secondaryCtaLabel?: string;
  secondaryCtaLink?: string;
}

const { 
  title = "Ready to Transform Your Landscape?", 
  text = "Get a free, no-obligation quote for your property today. Our team is ready to help you create the outdoor space of your dreams.", 
  primaryCtaLabel = "Get a Free Quote", 
  primaryCtaLink = "/contact",
  secondaryCtaLabel = "Call Us Now",
  secondaryCtaLink = `tel:${settings.contact.phone.replace(/\s/g, '')}`
} = Astro.props;
---

<section class="py-24 bg-slate-900 relative overflow-hidden" role="region" aria-labelledby="cta-heading">
   {/* Background Accents */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary-900/20 rounded-full blur-[100px] translate-x-1/3 -translate-y-1/3"></div>
    <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-secondary-900/10 rounded-full blur-[100px] -translate-x-1/3 translate-y-1/3"></div>
  </div>

  <Container class="relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h2 id="cta-heading" class="font-display text-4xl font-bold tracking-tight text-white lg:text-5xl mb-6">
        {title}
      </h2>
      <p class="text-xl text-slate-300 leading-relaxed font-light mb-10 max-w-2xl mx-auto">
        {text}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button 
          href={primaryCtaLink} 
          size="lg" 
          variant="primary"
          track={true}
          class="min-w-[200px] border-transparent bg-secondary-500 text-white shadow-xl shadow-secondary-900/20 hover:bg-secondary-600 hover:-translate-y-1 transition-all duration-300"
        >
          {primaryCtaLabel}
        </Button>
        <Button 
          href={secondaryCtaLink} 
          size="lg" 
          variant="outline"
          track={true}
          class="min-w-[200px] border-white/20 bg-white/5 text-white hover:bg-white/10 hover:border-white/40 hover:-translate-y-1 transition-all duration-300"
        >
          {secondaryCtaLabel}
        </Button>
      </div>
    </div>
  </Container>
</section>
