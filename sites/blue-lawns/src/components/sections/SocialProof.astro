---
interface Props {
  text?: string;
  count?: string;
}

const { 
  text = "Trusted by neighbors in Cape May County",
  count = "500+" 
} = Astro.props;
---

<div class="bg-primary-50 border-y border-primary-100 py-4">
  <div class="container mx-auto px-4 flex justify-center items-center gap-2 text-sm md:text-base font-medium text-slate-700">
    <div class="flex text-secondary-500">
      {'★★★★★'.split('').map(star => <span>{star}</span>)}
    </div>
    <span class="text-slate-400 mx-2">|</span>
    <span>Trusted by <span class="font-bold text-slate-900">{count}</span> neighbors in Cape May County</span>
  </div>
</div>

