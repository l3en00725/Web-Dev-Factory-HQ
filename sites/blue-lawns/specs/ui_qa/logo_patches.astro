<!-- FILE: src/components/ui/Logo.astro -->
---
interface Props {
  class?: string;
  variant?: 'default' | 'light' | 'dark'; // Kept for API compatibility, though we use the image now
  loading?: 'eager' | 'lazy';
}

const { 
  class: className,
  loading = 'eager'
} = Astro.props;
---

<a href="/" class:list={["block relative transition-opacity hover:opacity-90", className]} aria-label="Blue Lawns Home">
  <picture>
    <source srcset="/logo/logo.webp" type="image/webp" />
    <img 
      src="/logo/logo.png" 
      alt="Blue Lawns â€“ Coastal Lawn Care & Landscaping" 
      class="h-auto w-full object-contain"
      width="160"
      height="45"
      loading={loading}
    />
  </picture>
</a>

<!-- FILE: src/components/layout/Header.astro -->
// Update the Logo component usage in Header.astro
// Replace the existing <Logo ... /> line with:

<div class="flex-shrink-0">
  <Logo 
    class:list={[
      "transition-all duration-300",
      // Default Desktop
      "w-[160px]",
      // Scrolled State (smaller)
      "group-data-[scrolled=true]:w-[140px]"
    ]} 
  />
</div>

<!-- FILE: src/components/layout/Footer.astro -->
// Update the Logo component usage in Footer.astro
// Replace the existing <Logo ... /> line with:

<div class="mb-6">
  <Logo class="w-[150px]" loading="lazy" />
</div>

