---
import Base from "@/layouts/Base.astro";
---

<Base title="Welcome">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-500 to-purple-600">
    <div class="text-center text-white px-6">
      <h1 class="text-5xl font-bold mb-4">Welcome to Your New Site</h1>
      <p class="text-xl mb-8">Built with Astro, Tailwind CSS, and the Web-Dev-Factory-HQ pipeline</p>
      <a 
        href="https://astro.build" 
        target="_blank"
        class="inline-block bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
      >
        Learn More
      </a>
    </div>
  </div>
</Base>

