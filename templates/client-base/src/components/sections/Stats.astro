---
import Container from '../layout/Container.astro';

interface Stat {
  value: string;
  label: string;
}

interface Props {
  heading?: string;
  stats?: Stat[];
}

const { heading, stats = [] } = Astro.props;
---

<section class="bg-primary-900 py-20 text-white">
  <Container>
    {heading && (
      <h2 class="mb-12 text-center font-display text-3xl font-bold opacity-90 lg:text-4xl">
        {heading}
      </h2>
    )}

    <div class="grid gap-8 text-center sm:grid-cols-2 lg:grid-cols-4">
      {stats.map((stat) => (
        <div class="flex flex-col gap-2 rounded-2xl bg-white/5 p-6 backdrop-blur-sm">
          <span class="font-display text-5xl font-bold text-primary-300">{stat.value}</span>
          <span class="text-lg font-medium text-primary-100">{stat.label}</span>
        </div>
      ))}
    </div>
  </Container>
</section>
