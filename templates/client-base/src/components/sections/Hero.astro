---
import Container from '../layout/Container.astro';
import Button from '../ui/Button.astro';
import Image from '../sanity/Image.astro';
import PortableText from '../sanity/PortableText.astro';

interface Props {
  heading?: string;
  subheading?: any; // PortableText
  image?: any; // Sanity Image
  cta?: {
    title: string;
    link: string;
  };
}

const { heading, subheading, image, cta } = Astro.props;
---

<section class="relative overflow-hidden bg-background-subtle py-20 lg:py-32">
  <Container class="grid gap-12 lg:grid-cols-2 lg:items-center">
    <div class="flex flex-col items-start gap-6">
      {heading && (
        <h1 class="font-display text-4xl font-bold leading-tight tracking-tight text-foreground lg:text-6xl">
          {heading}
        </h1>
      )}
      {subheading && (
        <div class="prose prose-lg text-muted-foreground">
          <PortableText value={subheading} />
        </div>
      )}
      {cta && cta.link && (
        <Button href={cta.link} size="lg" variant="primary">
          {cta.title}
        </Button>
      )}
    </div>
    
    {image && (
      <div class="relative aspect-[4/3] w-full overflow-hidden rounded-2xl shadow-float lg:aspect-square">
        <Image 
          asset={image} 
          alt={heading || "Hero Image"} 
          class="h-full w-full object-cover transition-transform duration-slow hover:scale-105" 
          loading="eager" 
        />
      </div>
    )}
  </Container>
</section>
