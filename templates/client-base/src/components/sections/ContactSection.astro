---
interface Props {
  heading?: string;
  text?: any; // PortableText
  formTitle?: string;
}

const { heading, text, formTitle } = Astro.props;
---

<section class="py-16 bg-surface">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      {heading && <h2 class="text-3xl font-bold mb-6">{heading}</h2>}
      {/* Placeholder for content - will integrate PortableText component later */}
      <div class="prose mx-auto mb-12">
        <p>Contact form placeholder for {formTitle}</p>
      </div>
    </div>
  </div>
</section>

