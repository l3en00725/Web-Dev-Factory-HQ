---
// templates/client-base/src/components/form/ContactForm.astro
import { getSettings } from '../../lib/sanity/queries';

const settings = await getSettings();
const destination = settings?.formDestination;
const isCustomEmbed = destination?.destinationType === 'custom';
---

{isCustomEmbed && destination?.customEmbedCode ? (
  <div class="custom-form-embed" set:html={destination.customEmbedCode} />
) : (
  <contact-form class="block">
    <form id="contactForm" class="space-y-4">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div class="space-y-2">
          <label for="name" class="text-sm font-medium text-foreground">Name</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
        <div class="space-y-2">
          <label for="email" class="text-sm font-medium text-foreground">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary"
          />
        </div>
      </div>

      <div class="space-y-2">
        <label for="phone" class="text-sm font-medium text-foreground">Phone (Optional)</label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary"
        />
      </div>

      <div class="space-y-2">
        <label for="message" class="text-sm font-medium text-foreground">Message</label>
        <textarea 
          id="message" 
          name="message" 
          required 
          rows="4"
          class="w-full rounded-md border border-border bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary"
        ></textarea>
      </div>

      <button 
        type="submit" 
        class="w-full rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
      >
        Send Message
      </button>

      <div id="formStatus" class="hidden rounded-md p-3 text-sm"></div>
    </form>
  </contact-form>
)}

<script>
  class ContactForm extends HTMLElement {
    constructor() {
      super();
      const form = this.querySelector('form');
      const statusDiv = this.querySelector('#formStatus');
      const submitBtn = this.querySelector('button[type="submit"]');

      if (form) {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          if (!submitBtn || !statusDiv) return;

          // Reset status
          statusDiv.classList.add('hidden');
          statusDiv.className = 'hidden rounded-md p-3 text-sm';
          submitBtn.setAttribute('disabled', 'true');
          submitBtn.textContent = 'Sending...';

          const formData = new FormData(form);
          const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            phone: formData.get('phone'),
            message: formData.get('message'),
            formName: 'contact',
            pagePath: window.location.pathname,
            leadSource: 'direct' // Could be enhanced with UTM parsing
          };

          try {
            const response = await fetch('/api/forms/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            if (result.success) {
              statusDiv.textContent = 'Message sent successfully! We will get back to you soon.';
              statusDiv.classList.remove('hidden');
              statusDiv.classList.add('bg-green-100', 'text-green-800');
              form.reset();
            } else {
              throw new Error(result.error || 'Submission failed');
            }
          } catch (error) {
            console.error('Form error:', error);
            statusDiv.textContent = 'Something went wrong. Please try again or call us directly.';
            statusDiv.classList.remove('hidden');
            statusDiv.classList.add('bg-red-100', 'text-red-800');
          } finally {
            submitBtn.removeAttribute('disabled');
            submitBtn.textContent = 'Send Message';
          }
        });
      }
    }
  }

  customElements.define('contact-form', ContactForm);
</script>

